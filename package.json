  "repository": {
    "type": "git",
    "url": "http://github.com/LeonardoVal/randomness.js"
  },
  "main": "randomness.js",
  "module": "index.js",
  "dependencies": {},
  "devDependencies": {
    "@creatartis/creatartis-build": "0.2.4-beta"
