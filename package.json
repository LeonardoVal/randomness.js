  "keywords": [
    "random",
    "pseudorandom",
    "linear congruential",
    "mersenne twister"
  ],
  "version": "0.1.1",
  "author": {
    "name": "Leonardo Val",
    "email": "leonardo.val@creatartis.com"
  },
  "homepage": "http://creatartis.com",
